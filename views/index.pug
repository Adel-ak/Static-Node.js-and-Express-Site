extends layout.pug

block bgimage
  div(style="text-align: right")
    img#bg(src="https://achievement-images.teamtreehouse.com/javascript-loops-stage3.png", alt="")
    
block content 
  article.grid-container.portfolio-intro
    div
      h1 My Manuscript
      //- Add a description for your portfolio, what this project is, it's purpose, what it's supposed to accomplish, etc. 
      p.lead.text-light
        | Portfolio Description
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-2
      each val in projects
        .cell
          a(href=`/project/${val.id}`)
            img.thumbnail(src=`${val.image_urls[0]}`)
            h5= `${val.project_name}`
